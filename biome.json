{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"quoteStyle": "single",
			"lineEnding": "lf"
		}
	},
	"javascript": {
		"globals": ["Astro"],
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentStyle": "space",
			"lineEnding": "lf",
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
